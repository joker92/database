data formato italiano

A DUE CIFRE NELL ANNO
 select nome,cognome,data_nascita , date_format(data_nascita, "%d,/%m/%y")as "formato italiano" from utente ;
 A 4 CIFRE NELL ANNO

 select nome,cognome,data_nascita , date_format(data_nascita, "%d/%m/%Y")as "formato italiano" from utente ;


